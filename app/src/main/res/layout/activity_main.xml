<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yuding.hobbit2.MainActivity">


    <TextView
        android:id="@+id/hobbit"
        style="@style/CategoryStyle"
        android:background="@color/category_hobbit"
        android:text="@string/category_hobbit" />

    <TextView
        android:id="@+id/wizard"
        style="@style/CategoryStyle"
        android:background="@color/category_wizard"
        android:text="@string/category_wizard" />


    <TextView
        android:id="@+id/elf"
        style="@style/CategoryStyle"
        android:background="@color/category_elf"
        android:text="@string/category_elf" />

    <TextView
        android:id="@+id/dwarf"
        style="@style/CategoryStyle"
        android:background="@color/category_dwarf"
        android:text="@string/category_dwarf"/>


    <TextView
        android:id="@+id/galley"
        style="@style/CategoryStyle"
        android:background="@color/category_gallery"
        android:text="@string/category_gallery" />



</LinearLayout>